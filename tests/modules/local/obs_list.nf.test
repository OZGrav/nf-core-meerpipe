nextflow_process {

    name "Test Process OBS_LIST"
    script "modules/local/obs_list.nf"
    process "OBS_LIST"

    test("Should run without failures") {

        when {
            params {
                pulsar = "J1744-1134,J1909-3744"
                utcs = "2023-10-20-17:16:09"
                utce = "2023-10-30-12:29:25"
                project = ""
                obs_csv = ""
                outdir = "$outputDir"
            }
            process {
                """
                input = [
                    params.pulsar,
                    params.utcs,
                    params.utce,
                    params.project,
                    params.obs_csv,
                    params.upload,
                    params.psrdb_url,
                    params.psrdb_token,
                    params.ephemeris,
                    params.template,
                    params.outdir,
                    Channel.fromPath("$baseDir/tests/test_data/manifest.json"),
                ]
                """
            }
        }

        then {
            assert process.success
            assert path(process.out.out_csv.get(0)).readLines().size() == 4
        }

    }

}
